        self.cod = codigo
        self.name = nombre
        self.pr = precio


#Se trata a la nueva clase Registradora, se toman productos y cantidad de valores de venta 


class CajaRegistradora:
    def __init__(self):
        self.venta_producto = []

    def escanear_producto(self, producto):
        self.venta_producto.append(producto)

    def calcular_subtotal(self):
        subtotal = sum(producto.precio for producto in self.venta_producto)
        return subtotal

    def calcular_total(self):
        total = self.calcular_subtotal()
        return total

    def calcular_cambio(self, pago_cliente, total):
        cambio = pago_cliente - total
        return cambio

